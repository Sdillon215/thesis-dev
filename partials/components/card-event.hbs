<style>
    .event-card {
        transition: transform 0.3s ease;
    }

    .event-card:hover {
        transform: translateY(-5px);
    }

    .text-orange {
        color: #F58B00;
    }

    .event-title {
        font-size: 24px;
    }

    .text-green {
        color: #ACFF15;
    }

    .event-center {
        display: flex;
        justify-content: center;
    }
</style>

<article
    class="event-card card card-post{{#if has_image}}{{#if feature_image}} card-has-image{{/if}}{{/if}}{{#match slug current_slug}} card-post-active{{/match}}">
    <a class="card-link" href="{{url}}" aria-label="{{title}}"></a>
    {{#if has_image}}
    {{#if feature_image}}
    {{> "components/image" class="card-image" src=feature_image alt=title}}
    {{/if}}
    {{/if}}
    <div class="card-content">
        <div class="card-header">{{#if featured}}
            <span class="card-header-icon">
                {{> "icons/featured"}}
                <span class="tooltip">{{t "Featured Post"}}</span>
            </span>
            {{/if}}{{#unless access}}
            <span class="card-header-icon">
                {{> "icons/lock"}}
                {{#has visibility="paid"}}
                <span class="tooltip">{{t "Paid Post"}}</span>
                {{else has visibility="tiers"}}
                <span class="tooltip">{{tiers}}</span>
                {{else}}
                <span class="tooltip">{{t "For Members"}}</span>
                {{/has}}
            </span>
            {{/unless}}{{#primary_tag}}
            <a class="card-tag text-orange" href="{{url}}">{{name}}</a>
            {{/primary_tag}}
        </div>
        <h3 class="event-title">{{title}}</h3>
        <div>{{excerpt}}</div>
        <div class="card-footer event-center">
            <p class="text-green">RESERVE YOUR SPOT NOW!</p>
        </div>
    </div>
</article>