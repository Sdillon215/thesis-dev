<div class="post-content post-content-teaser">{{{html}}}</div>
<aside class="post-upgrade-cta container">
	{{#has visibility="paid"}}
		<h2>{{t "This post is for paying subscribers only"}}</h2>
	{{/has}}
	{{#has visibility="members"}}
		<h2>{{t "This post is for subscribers only"}}</h2>
	{{/has}}
	{{#has visibility="tiers"}}
		<h2>{{tiers prefix=(t "This post is for subscribers on the ") suffix=(t " only")}}</h2>
	{{/has}}

	<p>{{t "Become a member now and have access to all posts, enjoy exclusive content, and stay updated with constant updates."}}</p>

	{{#if @member}}
		<a class="button" href="#/portal/account/plans" data-portal="account/plans">{{t "Upgrade your account"}}</a>
	{{else}}
		<a class="button" href="#/portal/signup" data-portal="signup">{{t "Become a member"}}</a>
		<p>{{{t "Already have an account? {link}" link="<a class='link' href='#/portal/signin' data-portal='signin'>Sign in</a>"}}}</p>
	{{/if}}
</aside>