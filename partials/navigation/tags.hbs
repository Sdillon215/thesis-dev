{{#if tags}}
<nav class="navigation navigation-has-current sidebar-navigation">
	<div class="sidebar-navigation-tag">{{t "Tags"}}</div>

	<ul>
		{{#foreach tags}}
		<li>
			<a class="nav-link{{#match slug ../../tag.slug}}{{#if ../../is_page_tag}} nav-link-current{{/if}}{{/match}}" href="{{url}}">
				{{#if feature_image}}
				{{> "components/image" size="32" sizes="16px" class="nav-link-image" src=feature_image alt=(t "tag {tag}" tag=name)}}
				{{else}}
				<svg class="nav-link-image"></svg>
				{{/if}}
				<span>{{name}}</span>
			</a>
		</li>
		{{/foreach}}
	</ul>
</nav>
{{/if}}
